@page
@model GymBuddy.Pages.Michelle.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div style="background: Black;
            color: antiquewhite;
            font-size: 20px;
            padding: 5px;
            margin: 10px;">
<h1>Delete</h1>
</div>
<div style="background: red;
            color: antiquewhite;
            font-size: 16px;
            padding: 5px;
            margin: 10px;">
    <h3>Are you sure you want to delete this?</h3>
</div>
<div style="min-height:400px;Color:black;
     font-size: 20px;
     padding: 5px;
     border: 15px solid lightblue;
     margin: 10px;">
    <h4>Exercises</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.PrimaryMuscle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.PrimaryMuscle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.SecondaryMuscle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.SecondaryMuscle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.TrainingLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.TrainingLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.IntensityLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.IntensityLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises.HaveCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercises.HaveCompleted)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Exercises.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <input type="submit" value="Home" class="btn btn-dark"/>
    </form>
</div>
